<% layout("./layouts/boilerplate.ejs") %>
<h1>All Venues</h1>
<% for (let venue of venues){ %>
    <div class="card">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src=<%= venue.image %> alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-name"><%= venue.name %></h5>
                    <h6 class="card-team"><%= venue.team %></h6>
                    <p class="card-league"><small class="text-muted"><%= venue.league %></small></p>
                    <a class="btn btn-primary" href="/venues/<%= venue.id %>">View <%= venue.name %></a>
                </div>
            </div>
        </div>
    </div>    
<% } %>