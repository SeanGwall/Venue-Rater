<% layout("./layouts/boilerplate.ejs") %>
<div class="row">
    <h1 class="text-center">New Venue</h1>
    <div class="col-6 offset-3">
        <form action="/venues" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Venue Name</label>
                <input class="form-control" type="text" id="name" name="venue[name]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="team">Team Name</label>
                <input class="form-control" type="text" id="team" name="venue[team]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="league">Image URL</label>
                <input class="form-control" type="text" id="league" name="venue[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="league">League</label>
                <input class="form-control" type="text" id="league" name="venue[league]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Venue</button>
            </div>
        </form>
        <a href="/venues">Back</a>
    </div>
</div>